@model Employee
@inject IEmployeeRepository _employeeRepository

@{
    ViewBag.Title = "Edit Employee";
}

<form asp-controller="Home" asp-action="Edit" method="post" class="mt-3">
    <div class="form-group row">
        <input hidden asp-for="Id" />
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Department" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Dept>()"> <option value="">Please Select</option> ></select>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary" style="width:200px">Update</button>
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary" style="width:200px">Cancel</a>
    </div>    
</form>
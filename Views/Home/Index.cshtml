@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}

<ul class="list-group">
    <h1>@ViewBag.Title</h1>
    @foreach (var employee in Model)
    {
        <li class="list-group-item">@employee.Name</li>
        <div>
            <img src="~/images/avtar.jpg" width="50 !important" height="50" alt="~/images/avtar.jpg" asp-append-version="true">
        </div>
        <div>
            <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary"> View</a>
            <a asp-action="edit" asp-controller="home" asp-route-id="@employee.Id" class="btn btn-primary"> Edit</a>
            <a href="" class="btn btn-danger"> Delete</a>
        </div>
    }
   
</ul>


